    ImportExcel1: TImportExcel;
    Panel1: TPanel;
    btnImportar: TSpeedButton;
    bntSalvar: TSpeedButton;
    btnBancoDados: TSpeedButton;
    Label1: TLabel;
    pnlDelLote: TPanel;
